<% if logged_in? %>
<% provide(:title, 'List Books') %>

  <div class="table-responsive">
  <h3><span class="glyphicon glyphicon-star"></span> Top rated books:</h3>
    <table class="table table-hover">
      <thead>
      <tr>
        <td>
          <p><span class="glyphicon glyphicon-triangle-bottom"></span> Name</p>
        </td>
        <td>
          <p><span class="glyphicon glyphicon-triangle-bottom"></span> Author</p>
        </td>
        <td>
          <p><span class="glyphicon glyphicon-triangle-bottom"></span> Status</p>
        </td>

        <% if current_user.admin? %>
        <td>
          <p><span class="glyphicon glyphicon-triangle-bottom"></span> Administration</p>
        </td>
        <% end %>

      </tr>
      </thead>
      <tbody>

      </tbody>
    </table>
  </div>

  <div class="table-responsive">
  <h3><span class="glyphicon glyphicon-list"></span> All books:</h3>
    <table class="table table-hover">
      <thead>
      <tr>
        <td>
          <p><span class="glyphicon glyphicon-triangle-bottom"></span> Name</p>
        </td>
        <td>
          <p><span class="glyphicon glyphicon-triangle-bottom"></span> Author</p>
        </td>
        <td>
          <p><span class="glyphicon glyphicon-triangle-bottom"></span> Status</p>
        </td>

        <% if current_user.admin? %>
        <td>
          <p><span class="glyphicon glyphicon-triangle-bottom"></span> Administration</p>
        </td>
        <% end %>

      </tr>
      </thead>
      <tbody>
        <%= render @books %>
      </tbody>
    </table>
  </div>
  <%= will_paginate %>

<% else %>

  <div class="center jumbotron">
    <h1>Welcome to the FreeBook</h1>
    <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
  </div>

<% end %>
