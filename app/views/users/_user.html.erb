<li>
  <%= link_to user.name, user %>
  <span style="float: right">
  <% if current_user.admin? && current_user.email != user.email %>
    <%= link_to "Delete", user, method: :delete,
                                data: { confirm: "You sure?" },
                                class: 'btn btn-danger btn-xs'  %>
  <% end %>
  </span>
</li>
